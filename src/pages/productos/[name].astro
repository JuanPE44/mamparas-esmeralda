---
import sections from "../../content/sections/sections.json";
import Layout from "../../layouts/Layout.astro";
import SectionWork from "../../components/SectionWork.astro";
import SectionProducts from "../../components/SectionProducts.astro";

export function getStaticPaths() {
  const props = sections.map((section) => {
    return {
      params: {
        name: section.name,
      },
    };
  });
  return props;
}
const { name } = Astro.params;
---

<Layout title="Productos">
  <SectionProducts name={name} />
  <SectionWork name={name} />
</Layout>
