---
interface Props {
  backgroundUrl?: string;
  className?: string;
  h?: string;
  pb?: string;
  pt?: string;
}

const {
  backgroundUrl,
  className = "",
  h = "",
  pb = "pb-20",
  pt = "pt-10",
} = Astro.props;
---

<section
  style={`background-image: url(${backgroundUrl}); background-size: cover;`}
>
  <div
    class={`${className} ${h} ${backgroundUrl ? "bg-gradient-to-tr from-[#333e] to-[#213937ee]" : "bg-slate-100"} ${pb} ${pt} pt-10 z-50 w-full h-full px-phone`}
  >
    <slot />
  </div>
</section>
