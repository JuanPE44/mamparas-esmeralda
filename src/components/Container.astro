---
interface Props {
  backgroundUrl?: string;
  className?: string;
  h?: string;
  pb?: string;
  pt?: string;
  bg?: string;
  bgShadow?: string;
}

const {
  backgroundUrl,
  className = "",
  h = "",
  pb = "pb-20",
  pt = "pt-10",
  bg = "bg-slate-100",
  bgShadow,
} = Astro.props;
---

<section class="relative">
  {
    backgroundUrl && (
      <img
        src={backgroundUrl}
        class="object-cover absolute top-0 left-0 w-full h-full z-[-1]"
        alt="imagen de fondo mamparas esmeralda"
        decoding="async"
        loading="lazy"
      />
    )
  }
  <div
    class={`${className} ${h} ${backgroundUrl ? (bgShadow ? bgShadow : "bg-gradient-to-tr from-[#333e] to-[#213937ee]") : bg} ${pb} ${pt} pt-10 z-50 w-full h-full px-phone`}
  >
    <slot />
  </div>
</section>
