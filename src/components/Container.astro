---
interface Props {
  backgroundUrl?: string;
  className?: string;
  height?: string;
  pb?: string;
  pt?: string;
}

const {
  backgroundUrl,
  className = "",
  height,
  pb = "pb-20",
  pt = "pt-10",
} = Astro.props;
---

<section
  style={`background-image: url(${backgroundUrl}); background-size: cover;`}
>
  <div
    style={`min-height: ${height};`}
    class={`${className} ${backgroundUrl ? "bg-gradient-to-tr from-[#1a3939dd] to-[#213937ee]" : "bg-white"} ${pb} ${pt} pt-10 z-50 w-full h-full px-phone`}
  >
    <slot />
  </div>
</section>
