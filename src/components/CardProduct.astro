---
interface Props {
  name: string;
  title: string;
  description: string;
  url: string;
  measures: string;
  finish: string;
  glass: string;
}

const { name, title, description, url, measures, finish, glass } = Astro.props;
---

<div
  class="flex flex-col bg-white rounded-lg overflow-hidden shadow-md text-pretty"
>
  <img
    src={`/images/${name}/${url}.webp`}
    alt={title}
    class="h-64 object-cover"
    decoding="async"
    loading="lazy"
  />
  <section class="px-phone py-10 relative flex flex-col justify-between h-full">
    <div>
      <p class="text-[#333] italic capitalize">{name}</p>

      <h2 class="text-2xl font-bold mb-4 text-primary">{title}</h2>
      <h3 class="font-semibold">Caracteristicas</h3>
      <p class="text-[#333] text-sm">{description}</p>

      {
        measures && (
          <>
            <h3 class="font-semibold mt-2">Medidas del producto</h3>
            <p class="text-[#333] text-sm">{measures}</p>
          </>
        )
      }

      {
        finish && (
          <>
            <h3 class="font-semibold mt-2">Acabado</h3>
            <p class="text-[#333] text-sm">{finish}</p>
          </>
        )
      }

      {
        glass && (
          <>
            <h3 class="font-semibold mt-2">Tipos de vidrio</h3>
            <p class="text-[#333] text-sm">{glass}</p>
          </>
        )
      }
    </div>
    <a
      href="/#contacto"
      class="flex justify-center shadow-xl mt-10 bg-gradient-to-tr from-slate-600 to-[var(--color-primary)] text-white py-2 w-full text-center rounded-[var(--border)]"
    >
      consultanos
    </a>
  </section>
</div>
