---
import IconFacebook from "./icons/IconFacebook.astro";
import IconInstagram from "./icons/IconInstagram.astro";
import IconX from "./icons/IconX.astro";
import { Image } from "astro:assets";
import localLogo from "../../public/images/logos/logo-blanco.webp";
---

<footer class="px-phone py-10 bg-[#333] flex flex-col">
  <p class="mt-2 italic text-sm py-3 text-white">Conoce nuestro local!</p>
  <div class="rounded-[var(--border)] overflow-hidden mb-10">
    <iframe
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1586.445920119001!2d-59.13572512299036!3d-37.32138963437758!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95911f8e22f18801%3A0xa1ef29ffeb608b55!2sGral.%20Paz%20890%2C%20B7000%20Tandil%2C%20Provincia%20de%20Buenos%20Aires!5e0!3m2!1ses!2sar!4v1713914879321!5m2!1ses!2sar"
      height="400"
      style="border:0;"
      class="w-full"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  <div class="flex justify-between items-center">
    <Image
      src={localLogo}
      alt="Logo vidrieria Mamparas esmeralda en blanco"
      class="max-w-40 object-contain w-fit"
    />
    <div class="flex gap-2">
      <IconFacebook />
      <IconInstagram />
      <IconX />
    </div>
  </div>
  <div
    class="flex flex-col items-center text-white pt-4 mt-10 border-t-[1px] border-[#ddd] text-xs"
  >
    <p>Copyright by Mamparas esmeralda 2024</p>
    <p>
      Developed by <a
        target="_blank"
        href="https://www.instagram.com/juanpe.dev"
        class="underline italic text-juan">Juanpe.dev</a
      >
    </p>
  </div>
</footer>
