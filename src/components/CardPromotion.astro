---
import img from "../../public/images/mamparas/principal.webp";
import Image from "astro/components/Image.astro";
import H2 from "./H2.astro";
interface Props {
  color: string;
  title: string;
  disccount: number;
  price: number;
  description: string;
  url: string;
}

const { color, title, disccount, description, price, url } = Astro.props;
const discount = (price * disccount) / 100;
---

<div class="flex bg-white rounded-lg overflow-hidden w-full">
  <div class="relative">
    <div
      class="absolute top-4 left-2 rounded-xl text-white px-3 py-1 text-xs"
      style={`background-color: ${color}`}
    >
      {disccount}% OFF
    </div>
    <img
      src={`/images/promotions/${url}.webp`}
      alt={title}
      class="h-full w-64 object-cover"
      decoding="async"
      loading="lazy"
    />
  </div>
  <div class="px-6 py-4 flex flex-col justify-between">
    <div>
      <H2 color="text-black" m="">
        Mampara <span style={`color: ${color}`}>{title}</span>
      </H2>
      <h3 class="font-semibold mt-4">Caracteristicas</h3>
      <p class="text-[#555] text-sm">
        {description}
      </p>
    </div>
    <div class="flex flex-col">
      <h3 class="font-semibold" style={`color: ${color}`}>Precio</h3>
      <div class="flex gap-2 items-end">
        <p class="text-gray-400 line-through">${price}</p>
        <p class="font-extrabold text-black text-xl">${price - discount}</p>
      </div>
      <a
        href="/#contacto"
        style={`background:  ${color}`}
        class="shadow-xl mt-2 text-white text-sm py-2 w-full text-center rounded-lg transition-[0.3s] hover:scale-105"
      >
        Comprar
      </a>
    </div>
  </div>
</div>
